<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context=".Tela_inicial"
    android:weightSum="1">


    <CalendarView
        android:id="@+id/calendario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_de_compromissos"
        android:layout_alignEnd="@+id/sair_aplicativo"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/bt_agendar" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Agendar"
        android:id="@+id/bt_agendar"
        android:layout_alignParentBottom="true"
        android:background="#64dc46"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="false"
        android:textSize="12dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="filtrar"
        android:id="@+id/bt_filtrar"
        android:background="#64dc46"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bt_agendar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sair_aplicativo"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:background="#64dc46"
        android:layout_below="@+id/calendario"
        android:layout_toEndOf="@+id/bt_filtrar"
        android:layout_alignParentBottom="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/lista_de_compromissos"
        android:layout_alignEnd="@+id/sair_aplicativo"
        android:layout_below="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lista de Compromissos"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:background="#64dc46"
        android:autoText="false"
        android:textColor="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CalendÃ¡rio"
        android:id="@+id/textView10"
        android:textAlignment="center"
        android:background="#64dc46"
        android:autoText="false"
        android:textColor="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/lista_de_compromissos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
